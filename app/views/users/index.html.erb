<div class="row">
    <div class="col-lg-8">
        <h1>Users</h1>
    </div>
    <div class="col-lg-12 <%= @users.length>0?'':'hidden' %>">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <th>Gravtar</th>
                <th>Username</th>
                <th>Email</th>
                <th colspan=4>Action</th>
            </thead>
            <tbody>
                <% @users.each do | user |%>
                    <tr>
                        <td><%= gravtar_for user, size:30%></td>
                        <td><%= user.username %></td>
                        <td><%= user.email.nil? ? 'NA':user.email %></td>
                        <td><%= link_to "Show", user_path(user) %></td>
                        <td>
                            <% if current_user==user %>
                                <%= link_to "Edit", edit_user_path(user) %>
                            <% else %>
                                NA
                            <% end%>
                        </td>
                        <td>
                            <% if current_user==user %>
                                <%= link_to "Delete", user_path(user) ,method: :delete, data: {confirm: 'Are you sure?' } %>
                            <% else %>
                                NA
                            <% end %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
            <thead class="<%= @users.total_pages>1?'':'hidden'%>">
                <th colspan='5'><%= paginate @users %></th>
            </thead>
        </table>
    </div>
    <div class='col-lg-12  <%= @users.length>0?'hidden':'' %>'>
        No users available.
    </div>
</div>