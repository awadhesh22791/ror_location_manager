<% content_for :title, "| #{@user.username}" %>
<h2 class="center">Welcome to <%= @user.username%>'s page</h2>
<div class="col-lg-12 center">
    <%= gravtar_for @user, size:200%>
</div>
<div class="col-lg-12">
    <div class="center"><strong>Email:</strong> <%= @user.email %></div>
</div>
<% if current_user==@user || current_user.admin? %>
  <div class="center col-lg-12 mt-2">
    <%= link_to 'Edit this user', edit_user_path(@user),class: "btn btn-sm btn-primary" %>
  </div>
<% end %>