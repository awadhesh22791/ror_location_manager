<%= render 'shared/errors',obj:@user,formName:'user'%>
<div class="row">
    <div class="col-lg-12">
        <%= form_for @user do |u| %>
            <div class="form-group row">
                <div class="form-control-label col-lg-2">
                    <%= u.label :username%>
                </div>
                <div class="col-lg-6">
                    <%= u.text_field :username,class: 'form-control',autofocus: true,placeholder: 'Username' %>
                </div>
            </div>
            <div class="form-group row">
                <div class="form-control-label col-lg-2">
                    <%= u.label :email %>
                </div>
                <div class="col-lg-6">
                    <%= u.email_field :email,class: 'form-control',placeholder: "Email" %>
                </div>
            </div>
            <div class="form-group row">
                <div class="form-control-label col-lg-2">
                    <%= u.label :password %>
                </div>
                <div class="col-lg-6">
                    <%= u.password_field :password,class: 'form-control',placeholder: "Password" %>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-lg-2 col-lg-10">
                    <%= u.submit(@user.new_record? ? "Sign up" : "Update", class:"btn btn-primary")%>
                </div>
            </div>
        <% end %>
    </div>
</div>