<% content_for :title, "| #{@city.name}" %>
<h2 class="center">Name: <%= @city.name %></h2>
<div class="col-lg-12">
  <div class="center"><strong>State:</strong></div>
</div>
<div class="col-lg-12">
  <div class="center"><strong>Country:</strong></div>
</div>
<div class="center col-lg-12 mt-2">
  <%= link_to 'Edit this city', edit_city_path(@city),class: "btn btn-sm btn-primary" %>
  <%= link_to 'Delete this city', city_path(@city),method: :delete,data: {confirm: 'Are you sure you want to delete the city?'},
  class:'btn btn-sm btn-danger'%>
  <%= link_to 'View all cities', cities_path,class:"btn btn-sm btn-success" %>
</div>