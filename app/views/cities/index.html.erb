<% content_for :title, "| Cities" %>
<div class="row">
  <div class=" col-lg-8">
    <h1>Cities</h1>    
  </div>
  <div class="col-lg-4">    
    <%= link_to 'New City', new_city_path,class:'float-right btn btn-sm btn-primary mt-3' %>
  </div>
  <div class="col-lg-12 <%= @cities.length>0?'':'hidden' %>">
    <table class="table table-striped table-bordered table-hover" >
      <thead>
        <tr>
          <th>Name</th>
          <th>State</th>
          <th>Country</th>
          <th colspan="3">Action</th>
        </tr>
      </thead>

      <tbody>
        <% @cities.each do |city| %>
          <tr>
            <td><%= city.name %></td>
            <td></td>
            <td></td>
            <td><%= link_to "Show",city %></td>
            <td><%= link_to "Edit",edit_city_path(city) %></td>
            <td><%= link_to "Delete",city,method: :delete,data: {confirm: 'Are you sure?'} %></td>
          </tr>
        <% end %>
      </tbody>
      <thead>
        <th colspan='6'>
          <%= render "shared/paginate",obj:@cities%>
        </th>
      </thead>
    </table>
  </div>
  <div class='col-lg-12  <%= @cities.length>0?'hidden':'' %>'>
    No cities available.
  </div>
</div>