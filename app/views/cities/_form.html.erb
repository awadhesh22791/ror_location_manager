<%= render "shared/errors", obj:@city,formName:"city"%>
<div class="row">
  <div class="col-lg-12">
    <%= form_with(model: @city, local: true) do |form| %>
      <div class="form-group row">
        <div class="control-label col-lg-2">
          <%= form.label :name %>
        </div>
        <div class="col-lg-6">
          <%= form.text_field :name, class: "form-control",placeholder:"Name",autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="offset-lg-2 col-lg-10">
          <%= form.submit class:"btn btn-primary"%>
        </div>
      </div>
    <% end %>
  </div>
  <div class="offset-lg-2 col-lg-10">
    [ <%= link_to 'Cancel and return to cities', cities_path %> ]
  </div>
</div>