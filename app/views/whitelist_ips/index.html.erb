<% content_for :title, "| Whitelist Ips" %>
<div class="row">
  <div class=" col-lg-8">
    <h1>Whitelisted Ips</h1>    
  </div>
  <div class="col-lg-4">    
    <%= link_to 'New Country', "#",class:'float-right btn btn-sm btn-primary mt-3' %>
  </div>
  <div class="col-lg-12 <%= @whitelist_ips.length>0?'':'hidden' %>">
    <table class="table table-striped table-bordered table-hover" >
      <thead>
        <tr>
          <th>IP</th>
          <th>Added At</th>
          <th colspan="3">Action</th>
        </tr>
      </thead>

      <tbody>
        <% @whitelist_ips.each do |whitelist_ip| %>
          <tr>
            <td><%= whitelist_ip.ip %></td>
            <td><%= whitelist_ip.created_at %></td>
            <td><%= link_to 'Show', "#" %></td>
            <td><%= link_to 'Edit', "#" %></td>
            <td><%= link_to 'Destroy', "#", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
      <thead>
        <th colspan='6'>
          <%= render "shared/paginate",obj:@whitelist_ips%>
        </th>
      </thead>
    </table>
  </div>
  <div class='col-lg-12  <%= @whitelist_ips.length>0?'hidden':'' %>'>
    No whitelist ip addresses available.
  </div>
</div>