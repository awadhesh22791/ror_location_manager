<%= render 'shared/errors',obj:@state,formName:'state'%>
<div class="row">
    <div class="col-lg-12">
        <%= form_for @state do |s| %>
            <div class="form-group row">
                <div class="form-control-label col-lg-2">
                    <%= s.label :name%>
                </div>
                <div class="col-lg-6">
                    <%= s.text_field :name,class: 'form-control',autofocus: true,placeholder: 'Name' %>
                </div>
            </div>
            <div class="form-group row">
                <div class="form-control-label col-lg-2">
                    <%= s.label :short_name %>
                </div>
                <div class="col-lg-6">
                    <%= s.text_field :short_name,class: 'form-control',placeholder: "Short name" %>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-lg-2 col-lg-10">
                    <%= s.submit class:"btn btn-primary"%>
                </div>
            </div>
        <% end %>
    </div>
    <div class="offset-lg-2 col-lg-10">
        [ <%= link_to 'Cancel and return to states', states_path %> ]
    </div>
</div>