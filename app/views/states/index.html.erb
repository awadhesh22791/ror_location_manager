<div class="row">
    <div class="col-lg-8">
        <h1>States</h1>
    </div>
    <div class="col-lg-4">
        <%= link_to 'New State', new_state_path,class:'float-right btn btn-sm btn-primary mt-3' %>
    </div>
    <div class="col-lg-12 <%= @states.length>0?'':'hidden' %>">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <th>Name</th>
                <th>Short Name</th>
                <th>Country</th>
                <th colspan=4>Action</th>
            </thead>
            <tbody>
                <% @states.each do | state |%>
                    <tr>
                        <td><%= state.name %></td>
                        <td><%= state.short_name %></td>
                        <td><%= state.country.nil? ? 'NA':state.country.name %></td>
                        <td><%= link_to "Show", state_path(state) %></td>
                        <td><%= link_to "Edit", edit_state_path(state) %></td>
                        <td><%= link_to "Delete", state_path(state) ,method: :delete, data: {confirm: 'Are you sure?' } %></td>
                    </tr>
                <% end %>
            </tbody>
            <thead>
                <th colspan='6'>
                    <%= render "shared/paginate",obj:@states%>
                </th>
            </thead>
        </table>
    </div>
    <div class='col-lg-12  <%= @states.length>0?'hidden':'' %>'>
        No states available.
    </div>
</div>