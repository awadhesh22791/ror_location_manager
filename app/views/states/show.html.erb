<h2 class="center">Name: <%= @state.name%></h2>
<div class="col-lg-12">
  <div class="center"><strong>Short name:</strong><%= @state.short_name %></div>
</div>
<div class="center col-lg-12 mt-2">
  <%= link_to 'Edit this state', edit_state_path(@state),class: "btn btn-sm btn-primary" %>
  <%= link_to 'Delete this state', state_path(@state),method: :delete,data: {confirm: 'Are you sure you want to delete the state?'},
  class:'btn btn-sm btn-danger'%>
  <%= link_to 'View all states', states_path,class:"btn btn-sm btn-success" %>
</div>