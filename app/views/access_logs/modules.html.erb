<% content_for :title, "| Available modules" %>
<div class="row">
  <div class=" col-lg-8">
    <h1>Available modules</h1>    
  </div>
  <div class="col-lg-12 <%= @modules.keys.length>0?'':'hidden' %>">
    <table class="table table-striped table-bordered table-hover" >
      <thead>
        <tr>
          <th>Name</th>
          <th>Access Count</th>
          <th colspan="1">Action</th>
        </tr>
      </thead>

      <tbody>
        <% @modules.keys.each do |key| %>
          <tr>
            <td><%= key %></td>
            <td><%= @modules[key] %></td>
            <td><a href="/access_logs/modules/show/<%= key %>">Show</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class='col-lg-12  <%= @modules.keys.length>0?'hidden':'' %>'>
    No countries available.
  </div>
</div>