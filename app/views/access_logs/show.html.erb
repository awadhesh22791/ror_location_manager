<% content_for :title, "| #{params[:module_name]}" %>
<div class="row">
  <div class=" col-lg-8">
    <h1>Access log</h1>
    <span>Module name: <b><%= params[:module_name] %></b></span>    
  </div>
  <div class="col-lg-4">    
    <%= link_to 'Modules', access_logs_modules_path,class:'float-right btn btn-sm btn-primary mt-3' %>
  </div>
  <div class="col-lg-12 <%= @logs.length>0?'':'hidden' %>">
    <table class="table table-striped table-bordered table-hover" >
      <thead>
        <tr>
          <th>IP</th>
          <th>Access At</th>
          <th colspan="3">Action</th>
        </tr>
      </thead>

      <tbody>
        <% @logs.each do |log| %>
          <tr>
            <td><%= log.ip %> | <%= log.id %></td>
            <td><%= log.created_at %></td>
            <td><%= link_to 'Block', "#" %></td>
            <td><%= link_to 'Unblock', "#" %></td>
          </tr>
        <% end %>
      </tbody>
      <thead>
        <th colspan='6'>
          <%= render "shared/paginate",obj:@logs%>
        </th>
      </thead>
    </table>
  </div>
  <div class='col-lg-12  <%= @logs.length>0?'hidden':'' %>'>
    No logs available.
  </div>
</div>