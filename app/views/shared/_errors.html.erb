<% if obj.errors.any? %>
  <div class="row">
    <div class="col-lg-8">
      <div class="card text-white bg-danger mb-3">
        <div class="card-body">
          <h4 class="card-title">
            <%= pluralize(obj.errors.count, "error") %> prohibited this <%=formName%> from being saved:
          </h4>
          <div class="card-text">
            <ul>
            <% obj.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>