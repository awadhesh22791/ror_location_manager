<div class="row">
  <div class="col-lg-12">
    <p id="notice"><%= notice %></p>
  </div>

  <div class=" col-lg-8">
    <h1>Countries</h1>    
  </div>
  <div class="col-lg-4">
    
    <%= link_to 'New Country', new_country_path,class:'float-right' %>
  </div>

  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Short name</th>
        <th>Code</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>

    <tbody>
      <% @countries.each do |country| %>
        <tr>
          <td><%= country.name %></td>
          <td><%= country.short_name %></td>
          <td><%= country.code %></td>
          <td><%= link_to 'Show', country %></td>
          <td><%= link_to 'Edit', edit_country_path(country) %></td>
          <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>