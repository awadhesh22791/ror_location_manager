<div class="row">
  <div class="col-lg-12">
    <%= form_with(model: country, local: true) do |form| %>
      <% if country.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(country.errors.count, "error") %> prohibited this country from being saved:</h2>

          <ul>
          <% country.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group row">
        <div class="control-label col-lg-2">
          <%= form.label :name %>
        </div>
        <div class="col-lg-5">
          <%= form.text_field :name, class: "form-control",placeholder:"Name",autofocus: true %>
        </div>
      </div>

      <div class="form-group row">
        <div class="control-label col-lg-2">
          <%= form.label :short_name %>
        </div>
        <div class="col-lg-5">
          <%= form.text_field :short_name, class: "form-control",placeholder: "Short Name" %>
        </div>        
      </div>

      <div class="form-group row">
        <div class="control-label col-lg-2">
          <%= form.label :code %>
        </div>
        <div class="col-lg-5">
          <%= form.text_field :code, class: "form-control",placeholder: "Country Code" %>
        </div>        
      </div>

      <div class="form-group row">
        <div class="offset-lg-2 col-lg-10">
          <%= form.submit class:"btn btn-primary"%>
        </div>
      </div>
    <% end %>
  </div>
  <div class="offset-lg-2 col-lg-10">
    [ <%= link_to 'Cancel and return to countries', countries_path %> ]
  </div>
</div>