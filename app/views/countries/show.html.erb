<% content_for :title, "| #{@country.name}" %>
<h2 class="center">Name: <%= @country.name %></h2>
<div class="col-lg-12">
  <div class="center"><strong>Short name:</strong><%= @country.short_name %></div>
</div>
<div class="col-lg-12">
  <div class="center"><strong>Code:</strong><%= @country.code %></div>
</div>
<div class="center col-lg-12 mt-2">
  <%= link_to 'Edit this country', edit_country_path(@country),class: "btn btn-sm btn-primary" %>
  <%= link_to 'Delete this country', country_path(@country),method: :delete,data: {confirm: 'Are you sure you want to delete the country?'},
  class:'btn btn-sm btn-danger'%>
  <%= link_to 'View all countries', countries_path,class:"btn btn-sm btn-success" %>
</div>